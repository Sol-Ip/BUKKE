   <!-- 예약 승인 -->
   <update id="confirmReservation">
   UPDATE RESERVATION SET
   RESERVATION_STATUS = '승인' 
   WHERE RESERVATION_NO = #{reservationNo}
   </update>
   
   <!-- 예약 거절 -->
   <update id="rejectReservation">
   UPDATE RESERVATION SET
   RESERVATION_STATUS = '거절' 
   WHERE RESERVATION_NO = #{reservationNo}
   </update>
   
