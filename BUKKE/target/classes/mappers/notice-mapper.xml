<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="noticeMapper">

	<resultMap type="Notice" id="noticeResultMap">
		<id property="noticeNo" column="NOTICE_NO"></id>
		<result property="memberId" column="MEMBER_ID"></result>
		<result property="noticeTitle" column="NOTICE_TITLE"></result>
		<result property="noticeContents" column="NOTICE_CONTENTS"></result>
		<result property="noticeDate" column="NOTICE_DATE"></result>
		<result property="noticeStatus" column="NOTICE_STATUS"></result>
		<result property="nOriginalFilename" column="N_ORIGINAL_FILENAME"></result>
		<result property="nRenameFilename" column="N_RENAME_FILENAME"></result>
	</resultMap>
	
		<select id="selectListNoticeCount" resultType="_int">
		SELECT COUNT(*) FROM NOTICE
		WHERE NOTICE_STATUS = 'Y'	
		</select>

		<select id="selectNoticeList" resultMap="noticeResultMap">
			SELECT * FROM NOTICE WHERE NOTICE_STATUS = 'Y'
		</select>
		
		<select id="selectOneNotice" resultMap="noticeResultMap">
			SELECT * FROM NOTICE WHERE NOTICE_NO=#{noticeNo}
		</select>
		
		<select id="selectSearchList" resultMap="noticeResultMap">
			SELECT * FROM NOTICE
			<if test="noticeCategory.toString() =='title'">WHERE NOTICE_TITLE LIKE '%' || #{noticeKeyword}||'%'</if>
			<if test="noticeCategory.toString() =='contents'">WHERE NOTICE_CONTENTS LIKE '%' || #{noticeKeyword}||'%'</if>
			ORDER BY NOTICE_DATE DESC
		</select>
		
		<insert id="insertNotice" parameterType="Notice">
			INSERT INTO NOTICE 
				VALUES (SEQ_NOTICE_NO.NEXTVAL,'관리자', #{noticeTitle}, #{noticeContents},SYSDATE,'Y',#{nOriginalFilename},#{nRenameFilename})
		</insert>
		
		 <update id="updateNotice" parameterType="Notice">
			UPDATE NOTICE
			SET NOTICE_TITLE=#{noticeTitle} , NOTICE_CONTENTS=#{noticeContents},NOTICE_DATE =SYSDATE, N_ORIGINAL_FILENAME=#{nOriginalFilename},N_RENAME_FILENAME=#{nRenameFilename}
			WHERE NOTICE_NO = #{noticeNo}
		</update>
		
		<update id="deleteNotice" parameterType="Notice">
			UPDATE NOTICE
			SET NOTICE_STATUS = 'N'
			WHERE NOTICE_NO = #{noticeNo}
		</update>
		
		
</mapper>