<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-config.dtd" >
<configuration>
	<settings>
		<setting name="jdbcTypeForNull" value="NULL"/>
		<!-- 만약에 null로 데이터가 전달 되었으면 빈칸이 아닌 "NULL"로 인식하도록 설정 -->
	</settings>
	
 <typeAliases>
	<typeAlias type="com.bukke.spring.member.domain.Member" alias="Member"/>
	<typeAlias type="com.bukke.spring.notice.domain.Notice" alias="Notice"/>
	<typeAlias type="com.bukke.spring.review.domain.Review" alias="Review"/>
	<typeAlias type="com.bukke.spring.review.domain.ReviewComment" alias="ReviewComment"/>
	<typeAlias type="com.bukke.spring.review.domain.ReviewLikes" alias="ReviewLikes"/>
	<typeAlias type="com.bukke.spring.bukkeclass.domain.BukkeClass" alias="BukkeClass"/>
	<typeAlias type="com.bukke.spring.activity.domain.Activity" alias="Activity"/>
	<typeAlias type="com.bukke.spring.shop.domain.Shop" alias="Shop"/>
	<typeAlias type="com.bukke.spring.keep.domain.Keep" alias="Keep"/>
	<typeAlias type="com.bukke.spring.reservation.domain.Reservation" alias="Reservation"/>
	<typeAlias type="com.bukke.spring.chat.domain.Chat" alias="Chat"/>
	<typeAlias type="com.bukke.spring.chat.domain.Room" alias="Room"/>
</typeAliases> 

	<mappers>
		<mapper resource="mappers/member-mapper.xml"></mapper>
		<mapper resource="mappers/notice-mapper.xml"></mapper>
		<mapper resource="mappers/review-mapper.xml"></mapper>
		<mapper resource="mappers/bclass-mapper.xml"></mapper> 
		<mapper resource="mappers/activity-mapper.xml"></mapper>
		<mapper resource="mappers/shop-mapper.xml"></mapper> 
		<mapper resource="mappers/keep-mapper.xml"></mapper> 
		<mapper resource="mappers/reservation-mapper.xml"></mapper> 
		<mapper resource="mappers/chat-mapper.xml"></mapper>
	</mappers>

</configuration>